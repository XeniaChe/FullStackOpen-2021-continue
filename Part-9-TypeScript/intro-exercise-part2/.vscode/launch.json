  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "program": "${workspaceFolder}\\index.ts", // to run specified file (index.ts)
      // "program": "${workspaceFolder}\\${file}", // to run current file
      "outFiles": ["${workspaceFolder}/**/*.ts"]
    }
  ]
}
